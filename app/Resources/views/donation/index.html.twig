{% extends 'donation/layout.html.twig' %}

{% block javascripts %}
    <script type="text/javascript">
        Kernel.onLoad(function() {
            App.runDonation();
        });
    </script>
{% endblock %}

{% block donation_content %}
    <ul class="donation__form-steps">
        <li class="active"><span>Montant</span></li>
        <li>Coordonnées</li>
        <li>Paiement</li>
        <li>Confirmation</li>
    </ul>

    <div class="donation__amount">
        <form method="get" action="{{ path('donation_informations') }}">
            <h2>Je soutiens Emmanuel Macron</h2>
            <span class="fluo">Vous êtes une majorité à donner 50€</span>

            <p class="montant">
                Sélectionnez le montant de votre don :
            </p>

            <input name="montant"
                   id="donation-amount"
                   class="form form__field form--full"
                   type="number" min="0.01" max="7500" step="0.01" value="{{ amount }}" />

            <button class="btn btn--large-and-medium btn--primary" type="submit">
                Continuer
            </button>
        </form>
    </div>
{% endblock %}
